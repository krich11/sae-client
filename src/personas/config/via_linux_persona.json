{
    "persona_name": "via_linux_persona",
    "description": "VIA Linux PPK XML File Generation Persona (Master SAE Only)",
    "version": "1.0.0",
    
    "shell_path": "/bin/bash",
    "key_directory": "/usr/share/via",
    "simulation_mode": false,
    "operation_delay": 1.0,
    "command_timeout": 30,
    "sudo_enabled": true,
    "sudo_user": "root",
    "sudo_password": null,
    "ppk_format": true,
    
    "rotation_commands": [
        "echo 'VIA PPK rotation completed'",
        "date >> /var/log/via-ppk.log"
    ],
    "post_rotation_commands": [
        "systemctl reload via-service",
        "echo 'VIA service reloaded after PPK rotation' >> /var/log/via-ppk.log"
    ],
    "post_preconfigure_commands": [
        "mkdir -p /usr/share/via",
        "chown root:root /usr/share/via",
        "chmod 755 /usr/share/via"
    ],
    "post_deletion_commands": [
        "echo 'VIA PPK deleted' >> /var/log/via-ppk.log",
        "systemctl status via-service"
    ],
    
    "debug_mode": false,
    
    "metadata": {
        "environment": "production",
        "team": "network-security",
        "project": "sae-client",
        "device_model": "VIA-System",
        "location": "datacenter",
        "management_interface": "ppk-xml",
        "supported_operations": [
            "ppk-xml-generation",
            "sudo-execution",
            "system-integration",
            "formatted-key-storage",
            "master-sae-only"
        ]
    }
}
