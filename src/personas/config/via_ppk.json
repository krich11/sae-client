{
    "persona_name": "via_ppk",
    "description": "VIA PPK XML File Generation Persona",
    "version": "1.0.0",
    
    "shell_path": "/bin/bash",
    "key_directory": "/usr/share/via",
    "simulation_mode": false,
    "operation_delay": 1.0,
    "command_timeout": 30,
    "sudo_enabled": true,
    "sudo_user": "root",
    "sudo_password": null,
    "ppk_format": true,
    
    "rotation_commands": [
        "echo 'PPK rotation completed'",
        "date >> /var/log/via-ppk.log"
    ],
    
    "debug_mode": false,
    
    "metadata": {
        "environment": "production",
        "team": "network-security",
        "project": "sae-client",
        "device_model": "VIA-System",
        "location": "datacenter",
        "management_interface": "ppk-xml",
        "supported_operations": [
            "ppk-xml-generation",
            "sudo-execution",
            "system-integration",
            "formatted-key-storage"
        ]
    }
}
