{
    "persona_name": "via_linux",
    "description": "VIA Linux PPK XML File Generation Persona (Master SAE Only)",
    "version": "1.0.0",
    
    "shell_path": "/bin/bash",
    "key_directory": "/usr/share/via",
    "script_directory": "/usr/local/bin",
    "simulation_mode": false,
    "operation_delay": 1.0,
    "command_timeout": 30,
    "sudo_enabled": true,
    "sudo_user": "root",
    "sudo_password": null,
    "ppk_format": true,
    
    "rotation_commands": [
        "echo 'VIA PPK rotation completed'",
        "date >> /var/log/via-ppk.log",
        "systemctl reload via-service"
    ],
    "debug_mode": false
}
